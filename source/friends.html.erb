<div id="main-wrapper">
  <div id="main" class="container">
    <div class="row 200%">
      <div class="12u">

        <!-- Features -->
          <section class="box features">
            <h2 class="major about__company-heading"><span>Associazioni</span></h2>
            <div>
              <% dato.friends.sort_by(&:position).each_slice(4).to_a.each do |row| %>
                <div class="row">
                  <% row.each do |item| %>
                    <div class="3u 12u(mobile)">
                      <section class="box feature">
                        <a href="<%= item.url %>" class="image featured" target="_blank"><img src="<%= item.logo.file.to_url %>" alt="<%= item.name %>" /></a>
                        <h3><a href="<%= item.url %>" target="_blank"><%= item.name %></a></h3>
                      </section>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </section>

          <section class="box features">
            <h2 class="major"><span>Partner</span></h2>
            <div>
              <% dato.partners.sort_by(&:position).each_slice(4).to_a.each do |row| %>
                <div class="row">
                  <% row.each do |item| %>
                    <div class="3u 12u(mobile)">
                      <section class="box feature">
                        <a href="<%= item.url %>" class="image featured" target="_blank"><img src="<%= item.logo.file.to_url %>" alt="<%= item.name %>" /></a>
                        <h3><a href="<%= item.url %>" target="_blank"><%= item.name %></a></h3>
                      </section>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </section>

      </div>
    </div>
  </div>
</div>
